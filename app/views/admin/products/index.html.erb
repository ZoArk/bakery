
<h1>Products Management</h1>
<div class="links">
<%= link_to 'Back to Dashboard', admin_dashboard_path, class: 'button is-link' %>
<%= link_to "Add New Product", new_admin_product_path, class: "button" %>
</div>
<table>
<thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Stock</th>
    <th>Category</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= product.stock_quantity %></td>
      <td><%= product.category&.name || "Uncategorized" %></td>
      <td><%= product.description %></td>
      <td>
       <%= link_to "Show", admin_product_path(product) %>
      </td>
    </tr>
  <% end %>
</tbody>

